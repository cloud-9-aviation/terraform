{
	"name": "Ubuntu",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"postCreateCommand": {
		"command": "sudo chown -Rc $USER:$GROUP /home/vscode/.terraform.d/"
	},
	"mounts": [
		"source=home-dot-terraform-d,target=/home/vscode/.terraform.d,type=volume",
		"source=home-dot-cache,target=/home/vscode/.cache,type=volume",
		"source=home-dot-config,target=/home/vscode/.config,type=volume"
	],
	"features": {
		"ghcr.io/devcontainers/features/terraform:1": {
			"installSentinel": true,
			"installTFsec": true,
			"installTerraformDocs": true,
			"version": "1.1",
			"tflint": "0.47.0",
			"terragrunt": "latest"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-azuretools.vscode-docker"
			]
		}
	}
}